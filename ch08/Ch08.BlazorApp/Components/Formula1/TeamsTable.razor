@namespace Ch08.BlazorApp.Components.Formula1
@using Ch08.DataLib

<table class="table table-striped">
    <thead>
        <tr>
            <th>Team Name</th>
            <th>Country</th>
            <th>Founded Year</th>
            <th>Racers Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Teams)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Country</td>
                <td>@team.FoundedYear</td>
                <td>@team.Racers.Count</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public required IEnumerable<Team> Teams { get; set; }
}