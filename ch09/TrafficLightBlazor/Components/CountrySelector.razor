@using TrafficLightBlazor.Models

<div class="country-selection">
    <label for="country-select"><strong>Select Country:</strong></label>
    <select id="country-select" @bind="SelectedCountry" disabled="@Disabled" class="form-select">
        <option value="@Country.USA">USA</option>
        <option value="@Country.Slovenia">Slovenia</option>
        <option value="@Country.Austria">Austria</option>
    </select>
</div>

<style>
    .country-selection {
        max-width: 400px;
        margin: 20px auto;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
        border: 1px solid #dee2e6;
        text-align: center;
    }

    .country-selection label {
        display: block;
        margin-bottom: 10px;
    }

    .country-selection select {
        width: 200px;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }
</style>

@code {
    [Parameter]
    public Country SelectedCountry { get; set; }

    [Parameter]
    public EventCallback<Country> SelectedCountryChanged { get; set; }

    [Parameter]
    public bool Disabled { get; set; }
}