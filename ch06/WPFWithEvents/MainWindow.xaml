<Window x:Class="WPFWithEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFWithEvents"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel ButtonBase.Click="OuterButton_Click">
        <Button x:Name="buttonOne" Click="ButtonOne_Click">One</Button>
        <Button Click="ButtonTwo_Click">Two</Button>
    </StackPanel>
</Window>
